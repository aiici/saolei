/**main.wxss**/

.page-container {
  height: 100%;
}

.music-img {
  position: absolute;
  top: 45rpx;
  right: 45rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.music-img-playing {
  top: 40rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}

.btn-inline {
  display: flex;
  flex-direction: row;
}

.btn {
  border: 2rpx solid dimgray;
  color: green;
}

.btn-active {
  border: 2rpx solid lightgreen;
  background-color: seagreen;
  color: white;
}

.mine-panel {
  display: flex;
  flex-direction: column;
  border: 1rpx solid gray;
  padding: 2rpx;
  margin: 10rpx 0;
}

.mine-panel-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}

.mine-cell {
  width: 66rpx;
  height: 66rpx;
  border: 2rpx solid #fff;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  text-align: center;
  box-sizing: content-box;
}

.mine-cell-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 14rpx;
}

.mine-cover {
  background-color: #555555;
  width: 100%;
  height: 100%;
  margin: 1rpx,0,0,1rpx;
  opacity: 1;
}

.mine-number {
  align-self: center;
  color: black;
  opacity: 0.9;
}
.mine-number-1 {
  color: blue;
}
.mine-number-2 {
  color: green;
}
.mine-number-3 {
  color: purple;
}
.mine-number-4 {
  color: orange;
}
.mine-number-5 {
  color: pink;
}
.mine-number-6 {
  color: rebeccapurple;
}
.mine-number-7 {
  color: yellow;
}
.bg-img{
  background-color: #73a9db;
}
.mine-number-8 {
  color: red;
}
